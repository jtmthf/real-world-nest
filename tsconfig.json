{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "lib": ["es2017"],
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "strict": true,
    "typeRoots": ["./node_modules/@types", "./@types"]
  },
  "exclude": ["node_modules", "dist"]
}
